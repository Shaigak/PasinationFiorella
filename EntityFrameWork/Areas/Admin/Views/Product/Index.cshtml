@model Paginate<ProductListVM>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Product</h1>
                      <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>
                            Image
                          </th>

                           <th>
                            Name
                          </th>

                           <th>
                            Description
                          </th>

                           <th>
                            Count
                          </th>

                           <th>
                            Price
                          </th>

                           <th>
                            Category
                          </th>

                          <th>
                           Operations
                          </th>

                        </tr>
                      </thead>
                      <tbody>
                       <a class="btn btn-outline-info" asp-action="Create" style="float:right;">Create </a>
                        @foreach (var item in Model.Datas)
                        {
                             <tr>
                          <td class="py-1">
                             <img src="~/img/@item.MainImage"/>
                          </td>
                           <td class="py-1">
                             @item.Name
                          </td>
                           <td class="py-1">
                             @item.Description
                          </td>
                           <td class="py-1">
                             @item.Count
                          </td>
                           <td class="py-1">
                             @item.Price 
                          </td>
                           <td class="py-1">
                             @item.CategoryName
                          </td>

                         
                          <td>

                              <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@item.Id">Info</a>
                              <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>

                              <form style="display:inline-block;" id="category-delete-form" data-id="@item.Id">

                                  <button type="submit" class="btn btn-outline-danger deleteButton">Delete</button>

                              </form>
                              
 
                          </td>

                        </tr>
                        }
                      </tbody>
                    </table>
                  </div>

                  <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center mt-3">
    <li class="page-item @(Model.HasPrevious? "" :"disabled")">

         <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage-1)" tabindex="-1">Previous</a>
    </li>
    
     
    @for (int i = 1; i <= Model.TotalPage; i++)
            {
                <li class="page-item @(Model.CurrentPage==i? "disabled":"")"><a class="page-link" asp-action="Index" asp-route-page="@i" >@i</a></li>
            }
    <li class="page-item @(Model.HasNext?"":"disabled")">
        <a class="page-link"  asp-action="Index" asp-route-page="@(Model.CurrentPage+1)">Next</a></li>
      </ul>
          </nav>
                </div>
     

