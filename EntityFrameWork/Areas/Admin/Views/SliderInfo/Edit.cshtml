@model SliderUpdateVM
@{
    ViewData["Title"] = "Edit";
}

<div class="container my-5 ">

   

    <form class="forms-sample" asp-action="Edit" method="post" enctype="multipart/form-data" >
        
        <span>Image</span>
        <label class="form-label" for="customFile"></label>
        <input  class="form-control" id="customFile" asp-for="Photo" />
        <span class="text-danger" asp-validation-for="Photo"></span>
     
        
        <span>Description</span>
        <input type="text" class="form-control" id="customDesc" asp-for="Description" />
         <span class="text-danger" asp-validation-for="Description"></span>
         
         <span>Title</span>
         <input type="text" class="form-control" id="customTitle" asp-for="Title" />
         <span class="text-danger" asp-validation-for="Title"></span>

      <div class="buttons my-3">

     <button type="submit" class="btn btn-primary mr-2">Submit</button>
     <a class="btn btn-light" asp-action="Index">Cancel</a>
      </div>

    </form>

     @section Scripts{
          <script src="~/ckeditor/ckeditor.js"></script>

    <script>
        CKEDITOR.replace("customDesc")
         CKEDITOR.replace("customTitle")
        
    </script>
    }


</div>


